    <div style="color: red">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :kind_id, style: "display: block" %>
    <%
=begin%>
 <%= form.text_field :kind_id %> 
<%
=end%>
    <%
=begin%>
 <%= collection_select('object', 'metodo', 'coleção', 'valor do metodo que será guardado', 'o que será mostrado', "optios={}")%> 
<%
=end%>
    <%= form.collection_select(:kind_id, @tipos_de_kinds, :id, :description)%>
  </div>

  <div>
    <%= form.fields_for :address do |address_fields|%>
      <%= form.label :street, style: "display: block" %>
      <%= address_fields.text_field :street, style: "display: block" %>

      <%= form.label :city, style: "display: block" %>
      <%= address_fields.text_field :city, style: "display: block"%>


      <%= form.label :state, style: "display: block" %>
      <%= address_fields.select :state,  options_for_select([["Bahia","Ba"],["São Paulo","SP"]]) %>
    <% end %>

  </div>
  

  <div>
    <%= form.fields_for :phones do |phones_fields|%>
      <%= form.label :phone, style: "display: block" %>
      <%= phones_fields.text_field :phone, style: "display: block" %>

      
    <% end %>

  </div>

  <div>
    <%= form.label :rmk, style: "display: block" %>
